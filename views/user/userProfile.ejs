                isDefault: document.getElementById('setAsDefault').checked
            };
            
            console.log('Saving new address:', formData);
            alert('Address saved successfully!');
            bootstrap.Modal.getInstance(document.getElementById('addAddressModal')).hide();
            window.location.reload();
        });
        
        // Update address
        document.getElementById('updateAddress')?.addEventListener('click', function() {
            const formData = {
                id: document.getElementById('editAddressId').value,
                type: document.getElementById('editAddressType').value,
                fullName: document.getElementById('editFullName').value,
                addressLine1: document.getElementById('editAddressLine1').value,
                addressLine2: document.getElementById('editAddressLine2').value,
                city: document.getElementById('editCity').value,
                state: document.getElementById('editState').value,
                zipCode: document.getElementById('editZipCode').value,
                country: document.getElementById('editCountry').value,
                phoneNumber: document.getElementById('editPhoneNumber').value,

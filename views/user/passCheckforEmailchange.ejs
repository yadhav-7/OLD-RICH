<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Verify Password</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #f0f4c3, #ffffff);
    }

    .container {
      background-color: #ffffff;
      padding: 40px 30px;
      border-radius: 12px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
      width: 100%;
      max-width: 420px;
      text-align: center;
    }

    .container h2 {
      color: #33691e;
      margin-bottom: 25px;
      font-size: 26px;
      font-weight: 600;
    }

    .form-group {
      position: relative;
      margin-bottom: 20px;
      text-align: left;
    }

    .form-group input {
      width: 100%;
      padding: 16px 18px;
      font-size: 16px;
      border: 2px solid #ccc;
      border-radius: 6px;
      transition: 0.3s;
    }

    .form-group input:focus {
      border-color: #689f38;
      outline: none;
      box-shadow: 0 0 6px rgba(104, 159, 56, 0.4);
    }

    .form-group label {
      position: absolute;
      top: 14px;
      left: 18px;
      background: white;
      padding: 0 6px;
      font-size: 14px;
      color: #888;
      pointer-events: none;
      transition: 0.2s ease;
    }

    .form-group input:focus + label,
    .form-group input:not(:placeholder-shown) + label {
      top: -9px;
      left: 14px;
      font-size: 12px;
      color: #689f38;
    }

    .error {
      color: #d32f2f;
      font-size: 13px;
      margin-bottom: 15px;
      display: none;
    }

    .message-box {
      color: #d32f2f;
      font-size: 14px;
      margin-bottom: 15px;
    }

    button {
      background-color: #689f38;
      color: white;
      padding: 14px;
      width: 100%;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #558b2f;
    }

    p {
      margin-top: 20px;
      font-size: 14px;
      color: #33691e;
    }

    p a {
      color: #33691e;
      font-weight: 600;
      text-decoration: none;
    }

    p a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <form onsubmit="return verifyPassword()" action="/passCheckforEmailchange" method="POST">
      <h2>Verify Your Password</h2>

      <div class="form-group">
        <input
          name="password"
          type="password"
          id="passwordInput"
          placeholder=" "
          
        />
        <label for="passwordInput">Enter your password</label>
      </div>

      <% if (typeof message !== 'undefined') { %>
        <div class="message-box"><%= message %></div>
      <% }else{ %>
        <div class="message-box"></div>
        <% } %>

      <div id="errorMessage" class="error">Please enter your password</div>

      <button type="submit">Continue</button>

      <p>Back to <a href="/userProfile">Profile</a></p>
    </form>
  </div>

  <script>
    function verifyPassword() {
      const password = document.getElementById('passwordInput').value.trim();
      const errorMessage = document.getElementById('errorMessage');

      if (password === '') {
        errorMessage.style.display = 'block';
        return false;
      }

      errorMessage.style.display = 'none';
      return true;
    }
  </script>
</body>
</html>

            addressDetails[1].innerHTML = `
                Phone: ${addressData.phone}<br>
                ${addressData.altPhone ? `Alt. Phone: ${addressData.altPhone}` : ''}
            `;
        }

        // Update the onclick function for the edit button
        const editButton = addressCard.querySelector('.btn-outline-premium');
        if (editButton) {
            editButton.setAttribute('onclick', 
                `loadAddressForEdit('${addressId}', '${addressData.name}', '${addressData.phone}', '${addressData.altPhone || ''}', '${addressData.street}', '${addressData.country}', '${addressData.city}', '${addressData.state}', '${addressData.pincode}', '${addressData.addressType}')`
            );
        }

        console.log('Address updated successfully in DOM');

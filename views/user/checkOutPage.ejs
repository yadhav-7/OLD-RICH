        // Address form validation and submission
        function validateField(field) {
            const fieldId = field.id.replace('edit', '').toLowerCase();
            const errorElement = document.getElementById(`${field.id}Error`);
            const value = field.value.trim();

            // Simple validation patterns
            const patterns = {
                name: /^[a-zA-Z\s]{3,50}$/,
                phone: /^[6-9]\d{9}$/,
                altPhone: /^[6-9]\d{9}$|^$/,
                state: /^[a-zA-Z\s-]{2,50}$/,
                city: /^[a-zA-Z\s-]{2,50}$/,
                street: /^[a-zA-Z0-9\s,.'-]{5,100}$/,
                pincode: /^\d{6}$/
            };

            // Clear previous validation
            field.classList.remove('is-invalid', 'is-valid');
            if (errorElement) errorElement.style.display = 'none';

            // Skip validation for empty optional fields
            if (!field.required && !value) {
                return true;
            }

            // Validate required fields
            if (field.required && !value) {
                field.classList.add('is-invalid');
                if (errorElement) {
                    errorElement.style.display = 'block';
                    errorElement.textContent = 'This field is required';
                }
                return false;
            }

            // Pattern validation
            if (patterns[fieldId] && !patterns[fieldId].test(value)) {
                field.classList.add('is-invalid');
                if (errorElement) {
                    errorElement.style.display = 'block';
                    errorElement.textContent = getErrorMessage(fieldId);
                }
                return false;
            }

            // Field is valid
            field.classList.add('is-valid');
            return true;
        }

        function getErrorMessage(fieldId) {
            const messages = {
                name: 'Please enter a valid name (3-50 letters only)',
                phone: 'Please enter a valid 10-digit phone number starting with 6-9',
                altPhone: 'Please enter a valid 10-digit phone number starting with 6-9',
                state: 'Please enter a valid state name',
                city: 'Please enter a valid city name',
                street: 'Please enter a valid street address (5-100 characters)',
                pincode: 'Please enter a valid 6-digit pincode'
            };
            return messages[fieldId] || 'Invalid input';
        }

        function validateSelect(select) {
            const errorElement = document.getElementById(`${select.id}Error`);
            
            select.classList.remove('is-invalid', 'is-valid');
            if (errorElement) errorElement.style.display = 'none';

            if (select.required && !select.value) {
                select.classList.add('is-invalid');
                if (errorElement) {
                    errorElement.style.display = 'block';
                    errorElement.textContent = 'Please select an option';
                }
                return false;
            }

            select.classList.add('is-valid');
            return true;
        }


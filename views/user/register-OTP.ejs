    <style>
        /* Base styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: #f9fafb;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 16px;
        }

        .otp-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 32px;
            width: 100%;
            max-width: 480px;
            text-align: center;
        }

        h1 {
            font-size: 24px;
            font-weight: 700;
            color: #111827;
            margin-bottom: 8px;
        }

        p {
            color: #6b7280;
            margin-bottom: 24px;
        }

        /* OTP Inputs */
        .otp-inputs {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-bottom: 24px;
        }

        .otp-input {
            width: 48px;
            height: 48px;
            text-align: center;
            font-size: 18px;
            font-weight: 600;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            background-color: #f9fafb;
            transition: all 0.2s ease;
        }

        .otp-input:focus {
            outline: none;
            border-color: #16a34a;
            box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1);
        }

        /* Button styles */
        .verify-btn {
            background-color: #16a34a;
            color: #ffffff;
            font-weight: 600;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 16px;
        }

        .verify-btn:hover {
            background-color: #15803d;
        }

        .verify-btn:disabled {
            opacity: 0.8;
            cursor: not-allowed;
        }

        /* Spinner Style */
        .verify-loader {
            border: 2px solid white;
            border-top: 2px solid transparent;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            animation: spin 0.8s linear infinite;
            display: inline-block;
            vertical-align: middle;
            margin-left: 8px;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Countdown and Resend */
        .countdown {
            color: #6b7280;
            margin-bottom: 16px;
            font-size: 14px;
        }

        .resendOTP {
            background: none;
            border: none;
            color: #16a34a;
            font-weight: 600;
            cursor: pointer;
            text-decoration: underline;
            padding: 8px 16px;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .resendOTP:hover {
            background-color: #f0fdf4;
        }

        .resendOTP:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Responsive styles */
        @media (max-width: 480px) {
            .otp-container {
                padding: 24px 20px;
            }

            h1 {
                font-size: 22px;
            }

            .otp-inputs {
                gap: 8px;
            }

            .otp-input {
                width: 42px;
                height: 42px;
                font-size: 16px;
            }

            .verify-btn {
                padding: 10px 20px;
            }
        }

        @media (max-width: 360px) {
            .otp-container {
                padding: 20px 16px;
            }

            h1 {
                font-size: 20px;
            }

            .otp-inputs {
                gap: 6px;
            }

            .otp-input {
                width: 38px;
                height: 38px;
                font-size: 16px;
            }
        }
    </style>
</head>

<body>
    <div class="otp-container">
        <h1>OTP Verification</h1>
        <p>Enter the 6-digit code sent to your email</p>

        <form id="otpForm" action="/verify-otp" method="post">
            <div class="otp-inputs">
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric" autofocus>
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric">
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric">
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric">
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric">
                <input class="otp-input" type="text" maxlength="1" pattern="[0-9]" inputmode="numeric">
            </div>

            <button type="submit" id="verifyBtn" class="verify-btn">
                <span id="verifyText">Verify</span>
                <span id="verifyLoader" class="verify-loader" style="display: none;"></span>
            </button>

            <div class="countdown" id="countdown">(01:00)</div>
        </form>
        <button class="resendOTP" id="resendBtn" style="display: none;">Resend OTP</button>
    </div>

    <script>
        const inputs = document.querySelectorAll('.otp-input');
        const countdownEl = document.getElementById('countdown');
        const resendBtn = document.getElementById('resendBtn');
        const verifyBtn = document.getElementById('verifyBtn');
        const verifyText = document.getElementById('verifyText');
        const verifyLoader = document.getElementById('verifyLoader');
        const otpForm = document.getElementById('otpForm');
        
        let timeLeft = 60;
        let timer = null;
        const timerDuration = 60;

        // Toastify configuration
        const toastConfig = {
            duration: 3000,
            close: true,
            gravity: "top",
            position: "right",
            stopOnFocus: true
        };

        // Show toast function
        function showToast(message, type = 'info') {
            let backgroundColor;
            
            switch(type) {
                case 'success':
                    backgroundColor = "linear-gradient(to right, #16a34a, #15803d)";
                    break;
                case 'warning':
                    backgroundColor = "linear-gradient(to right, #f59e0b, #d97706)";
                    break;
                case 'error':
                    backgroundColor = "linear-gradient(to right, #dc2626, #b91c1c)";
                    break;
                default:
                    backgroundColor = "linear-gradient(to right, #3b82f6, #1d4ed8)";
            }
            
            Toastify({
                text: message,
                ...toastConfig,
                backgroundColor: backgroundColor
            }).showToast();
        }

        // Initialize timer display
        countdownEl.textContent = `(01:00)`;
        verifyBtn.style.display = 'flex';
        resendBtn.style.display = 'none';

        // Start or restart the timer
        function startTimer() {
            if (timer) {
                clearInterval(timer);
                timer = null;
            }

            timeLeft = timerDuration;
            countdownEl.textContent = `(01:00)`;
            countdownEl.style.display = 'block';
            verifyBtn.style.display = 'flex';
            resendBtn.style.display = 'none';
            resendBtn.setAttribute('aria-disabled', 'true');

            timer = setInterval(() => {
                timeLeft--;
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                countdownEl.textContent = `(${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')})`;

                if (timeLeft <= 0) {
                    clearInterval(timer);
                    timer = null;
                    countdownEl.style.display = 'none';
                    countdownEl.textContent = 'Timer expired';
                    verifyBtn.style.display = 'none';
                    resendBtn.style.display = 'block';
                    resendBtn.setAttribute('aria-disabled', 'false');
                    resendBtn.focus();
                }
            }, 1000);
        }

        // Resend OTP
        async function reSendOtp() {
            try {
                // Show loading state
                resendBtn.disabled = true;
                resendBtn.innerHTML = 'Sending...';

                const response = await fetch('/reSendOtp', {
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                    },
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }

                const data = await response.json();

                if (data.success) {
                    showToast('OTP resent successfully', 'success');
                    
                    clearInterval(timer);
                    timeLeft = 60;
                    countdownEl.textContent = `(01:00)`;
                    countdownEl.style.display = 'block';
                    verifyBtn.style.display = 'flex';
                    resendBtn.style.display = 'none';
                    inputs.forEach(input => input.value = '');
                    inputs[0].focus();
                    startTimer();
                } else {
                    showToast(data.message || 'Failed to resend OTP', 'error');
                }
            } catch (error) {
                console.error('Error resending OTP:', error);
                showToast('Something went wrong while resending the OTP.', 'error');
            } finally {
                // Reset button state
                resendBtn.disabled = false;
                resendBtn.innerHTML = 'Resend OTP';
            }
        }

        // Input event handlers
        inputs.forEach((input, index) => {
            input.addEventListener('input', (e) => {
                const value = e.target.value.replace(/\D/g, '');
                e.target.value = value;
                if (value.length === 1 && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && e.target.value.length === 0 && index > 0) {
                    inputs[index - 1].focus();
                }
            });

            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text').replace(/\D/g, '');
                if (pastedData.length > 0) {
                    inputs.forEach((inp, i) => {
                        inp.value = pastedData[i] || '';
                    });
                    const focusIndex = Math.min(pastedData.length, inputs.length - 1);
                    inputs[focusIndex].focus();
                    if (pastedData.length === 6) {
                        validateOtp();
                    }
                }
            });
        });

        function resetVerifyButton() {
            verifyBtn.disabled = false;
            verifyText.textContent = 'Verify';
            verifyLoader.style.display = 'none';
        }

        async function validateOtp(e) {
            e.preventDefault();

            // Show loading state
            verifyBtn.disabled = true;
            verifyText.textContent = 'Verifying...';
            verifyLoader.style.display = 'inline-block';

            let otp = '';
            inputs.forEach(input => otp += input.value);

            if (otp.length !== 6 || !/^\d{6}$/.test(otp)) {
                showToast('Please enter a valid 6-digit OTP', 'warning');
                inputs[0].focus();
                resetVerifyButton();
                return;
            }

            try {
                const response = await fetch('/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                    },
                    body: JSON.stringify({ otp }),
                    credentials: 'same-origin',
                });

                const data = await response.json();

                if (data.success) {
                    showToast('Verified successfully', 'success');
                    
                    // Wait for toast to show before redirecting
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || '/refferalCodeEnter';
                    }, 1500);
                } else {
                    showToast(data.message || 'OTP verification failed', 'error');
                    inputs.forEach(input => input.value = '');
                    inputs[0].focus();
                }
            } catch (error) {
                console.error('Error verifying OTP:', error);
                showToast('Verification failed. Please try again later.', 'error');
                inputs.forEach(input => input.value = '');
                inputs[0].focus();
            } finally {
                resetVerifyButton();
            }
        }

        // Event listeners
        otpForm.addEventListener('submit', validateOtp);
        resendBtn.addEventListener('click', reSendOtp);

        // Start timer on page load
        startTimer();
    </script>
</body>
</html>
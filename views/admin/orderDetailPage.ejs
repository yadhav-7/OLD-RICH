<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - Admin Panel</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f6fb;
            margin: 0;
            padding: 0;
            color: #222;
        }

        .main-container {
            padding-left: 16rem;
        }

        .container {
            max-width: 900px;
            margin: 60px auto 30px auto;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 6px 32px rgba(30, 136, 229, 0.08), 0 1.5px 6px rgba(0, 0, 0, 0.04);
            overflow: hidden;
            padding: 0;
        }

        .header {
            background: linear-gradient(90deg, #1976d2 0%, #42a5f5 100%);
            color: #fff;
            padding: 32px 40px 24px 40px;
            border-bottom-left-radius: 40px 20px;
        }

        .header h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .section {
            padding: 32px 40px 24px 40px;
            border-bottom: 1px solid #f0f0f0;
        }

        .section:last-child {
            border-bottom: none;
        }

        .section-title {
            color: #1976d2;
            margin-top: 0;
            margin-bottom: 18px;
            font-size: 1.25rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 170px 1fr;
            gap: 14px 24px;
        }

        .info-label {
            font-weight: 600;
            color: #555;
            letter-spacing: 0.2px;
        }

        .info-value {
            color: #222;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 14px;
            border-radius: 16px;
            font-weight: 600;
            font-size: 13px;
            letter-spacing: 0.2px;
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-return {
            background: #fff3e0;
            color: #e65100;
        }

        .status-clarify {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-completed {
            background: #e8f5e9;
            color: #388e3c;
        }

        .status-cancelled {
            background: #ffebee;
            color: #c62828;
        }

        .return-notification {
            margin: 0 40px 24px 40px;
            padding: 18px 24px;
            border-radius: 8px;
            background: linear-gradient(90deg, #fff8e1 60%, #fffde7 100%);
            border-left: 5px solid #ffb300;
            box-shadow: 0 2px 8px rgba(255, 193, 7, 0.07);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .return-notification p {
            margin: 0;
            font-size: 1rem;
            color: #b26a00;
            font-weight: 500;
        }

        .return-actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 22px;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.18s, color 0.18s;
        }

        .btn-approve {
            background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
            color: #fff;
            border: none;
        }

        .btn-reject {
            background: #fff;
            color: #e65100;
            border: 1.5px solid #ffb300;
        }

        .btn-approve:hover {
            background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
        }

        .btn-reject:hover {
            background: #fff3e0;
        }

        .items-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

        .items-table th {
            background: #e3f2fd;
            color: #1976d2;
            font-weight: 700;
            padding: 14px 10px;
            border-radius: 6px 6px 0 0;
            font-size: 15px;
            border-bottom: 2px solid #bbdefb;
        }

        .items-table td {
            background: #f9f9fb;
            padding: 14px 10px;
            font-size: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

        .items-table tr:last-child td {
            border-bottom: none;
        }

        @media (max-width: 700px) {

            .container,
            .section,
            .header,
            .return-notification {
                padding-left: 16px !important;
                padding-right: 16px !important;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .items-table th,
            .items-table td {
                font-size: 13px;
                padding: 10px 6px;
            }
        }
    </style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%- include('../../views/partials/admin/adminHeaders', {title: 'adminHeader-page' }) %>
        <%- include('../../views/partials/admin/adminSidebar', {title: 'adminSidebar-page' }) %>
</head>

<body>
    <div class="main-container">
        <div class="container">
            <div class="header">
                <h1>Order Details</h1>
            </div>

            <div class="section">
                <h2 class="section-title">Order Information</h2>
                <div class="info-grid">
                    <div class="info-label">Order ID:</div>
                    <div class="info-value">
                        <%= order.orderId %>
                    </div>
                    <div class="info-label">Order Date:</div>
                    <div class="info-value">
                        <%= new Date(order.createdOn).toLocaleDateString() %>
                    </div>
                    <div class="info-label">Total Amount:</div>
                    <div class="info-value">â‚¹<%= order.finalAmount %>
                    </div>
                    <div class="info-label">Status:</div>
                    <div class="info-value">
                        <% if(order.status==='returnRequested' ){ %>
                            <span class="status-badge status-return">Return Requested</span>
                            <% } else if(order.status==='Completed' ){ %>
                                <span class="status-badge status-completed">Completed</span>
                                <% } else if(order.status==='Cancelled' ){ %>
                                    <span class="status-badge status-cancelled">Cancelled</span>
                                    <% } else { %>
                                        <span class="status-badge status-clarify">
                                            <%= order.status %>
                                        </span>
                                        <% } %>
                    </div>
                    <div class="info-label">Payment Method:</div>
                    <div class="info-value">
                        <%= order.paymentMethod %>
                    </div>
                </div>
            </div>

            <% if (order.status==='returnRequested' ) { %>
                <div class="return-notification">
                    <p>
                        <strong>Return Requested</strong> for Order: <%= order.productName %>
                            <% if(order.size){ %> (Size: <%= order.size %>) <% } %>
                    </p>
                    <div class="return-actions">
                        <button class="btn btn-approve"
                            onclick="handleReturnAction('<%= null %>', '<%= order.orderId %>', 'returned')">
                            Accept
                        </button>
                        <button class="btn btn-reject"
                            onclick="handleReturnAction('<%= null %>', '<%= order.orderId %>', 'reutrnRejected')">
                            Reject
                        </button>
                    </div>
                </div>
                <% }else{ %>

                <% order.orderedItems?.forEach((element) => { %>
    <% if (element.status === 'returnRequested') { %>
        <div class="return-notification">
            <p>
                <strong>Return Requested</strong> for item: <%= element.product.productName %>
                <% if (element.size) { %> (Size: <%= element.size %>) <% } %>
            </p>
            <div>
                <img src="/uploads/<%= element.product.productImage[0] %>" alt="Product Image" style="width: 100px;">
            </div>
            <div class="return-actions">
                <button class="btn btn-approve"
                    onclick="handleReturnAction( '<%= element._id %>','<%= order.orderId %>', 'returned')">
                    Accept
                </button>
                <button class="btn btn-reject"
                    onclick="handleReturnAction( '<%= element._id %>','<%= order.orderId %>', 'returnRejected')">
                    Reject
                </button>
            </div>
        </div>
    <% } %>
<% }); %>

            
               <% } %>

                    <div class="section">
                        <h2 class="section-title">Shipping Address</h2>
                        <div class="info-grid">
                            <div class="info-label">Name:</div>
                            <div class="info-value">
                                <%= order?.address?.name %>
                            </div>
                            <div class="info-label">Address:</div>
                            <div class="info-value">
                                <%= order?.address?.street %><br>
                                    <%= order?.address?.city %>, <%= order?.address?.state %><br>
                                            <%= order?.address?.country %> - <%= order?.address?.pincode %>
                            </div>
                            <div class="info-label">Phone:</div>
                            <div class="info-value">
                                <%= order?.address?.phone %>
                            </div>
                        </div>
                    </div>

                    <div class="section">
                        <h2 class="section-title">Order Items</h2>
                        <table class="items-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Size</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order?.orderedItems?.forEach(element=> { %>
                                    <tr>
                                        <td>
                                            <%= element.productName %>
                                        </td>
                                        <td>
                                            <%= element.size %>
                                        </td>
                                        <td>
                                            <%= element.quantity %>
                                        </td>
                                        <td>
                                            <% if(element.status==='returnRequested' ){ %>
                                                <span class="status-badge status-return">Return Requested</span>
                                                <% } else if(element.status==='Completed' ){ %>
                                                    <span class="status-badge status-completed">Completed</span>
                                                    <% } else if(element.status==='Cancelled' ){ %>
                                                        <span class="status-badge status-cancelled">Cancelled</span>
                                                        <% } else { %>
                                                            <span class="status-badge status-clarify">
                                                                <%= element.status %>
                                                            </span>
                                                            <% } %>
                                        </td>
                                        <td>â‚¹<%= element.price %>
                                        </td>
                                        <td>â‚¹<%= (element.price * element.quantity).toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
        </div>
    </div>
    <script>
        
        // Example handler for Accept/Reject (replace with your AJAX logic)
     async function handleReturnAction(itemId,orderId,newStatus) {
    try {
        const response = await fetch('/admin/handleReturnReq?_method=PATCH', {
            method: 'post',
            headers: {
                'Content-type': 'application/json'
            },
            body: JSON.stringify({
                itemId,
                orderId,
                newStatus
            })
        })

        const data = await response.json()
        if (response.ok) {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: data.message||'Order status updated successfully.',
                timer: 1800,
                showConfirmButton: false
            }).then(() => {
                location.reload();
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed!',
                text: data.message||'Failed to update order status.',
                timer: 2000,
                showConfirmButton: false
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: 'Something went wrong. Please try again.',
            timer: 2000,
            showConfirmButton: false
        });
    }
}
  </script>
</body>

</html>
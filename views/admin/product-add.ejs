            position: relative;
            display: inline-block;
            margin: 5px;
            border: 1px solid var(--medium-gray);
            padding: 5px;
            background: var(--white);
            border-radius: 6px;
            transition: all 0.3s;
        }

        .thumbnail:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .thumbnail img {
            max-width: 100px;
            max-height: 100px;
            display: block;
            border-radius: 4px;
        }

